<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/loginScreenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/passwordEditText"
        android:layout_marginEnd="107dp"
        android:text="Login Screen"
        android:textSize="30dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/promtText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="18dp"
        android:text="Please enter your username and password"
        android:textSize="22dp"
        android:layout_below="@id/loginScreenText"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/uwlLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="4.2in"
        android:layout_below="@id/promtText"
        android:src="@drawable/uwl_logo"/>

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_below="@id/uwlLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Username"
        android:inputType="text"
        android:maxLength="20"
        android:padding="8dp" />


    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameEditText"
        android:layout_marginBottom="16dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="20"
        android:padding="8dp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordEditText"
        android:layout_marginTop="16dp"
        android:text="Login" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginButton"
        android:layout_marginTop="16dp"
        android:text="Clear" />

</RelativeLayout>
